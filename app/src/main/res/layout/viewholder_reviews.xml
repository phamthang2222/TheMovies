<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/prime_color"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgUserReview"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/svg_user" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="9.8"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintEnd_toEndOf="@+id/imgUserReview"
        app:layout_constraintStart_toStartOf="@+id/imgUserReview"
        app:layout_constraintTop_toBottomOf="@+id/imgUserReview" />

    <TextView
        android:id="@+id/tvUserReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Ho va ten"
        app:layout_constraintStart_toEndOf="@+id/imgUserReview"
        app:layout_constraintTop_toTopOf="@+id/imgUserReview" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_60sdp"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Noi dung"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvUserReview"
        app:layout_constraintTop_toBottomOf="@+id/tvUserReview" />
</androidx.constraintlayout.widget.ConstraintLayout>